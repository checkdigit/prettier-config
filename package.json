{
  "name": "@checkdigit/prettier-config",
  "version": "4.1.0",
  "description": "Check Digit code formatting configuration",
  "private": false,
  "main": "index.json",
  "engines": {
    "node": ">=18"
  },
  "author": "Check Digit, LLC",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --ignore-path .gitignore --list-different .",
    "prettier:fix": "prettier --ignore-path .gitignore --write .",
    "test": "npm run ci:test",
    "ci:test": "npm run ci:style && prettier --version | grep -q '3.0.3'",
    "ci:style": "npm run prettier"
  },
  "peerDependencies": {
    "prettier": "3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/prettier-config.git"
  },
  "files": [
    "index.json"
  ]
}
